extends ../layouts/page

include ../../components/range-slider/range-slider
include ../../components/label/label
include ../../components/checkbox-list/checkbox-list
include ../../components/checkbox-list-xp/checkbox-list-xp
include ../../components/card/room-thumb/room-thumb
include ../../components/paginator/paginator
include ../../components/dropdown/dropdown

block vars
  - var title = 'Search room/Filter'

block main
  article.search-room-filter
    .search-room-filter__inner
      section.search-room-filter__sidebar
        .search-room-filter__date-dropdown-group
          .search-room-filter__sidebar-label
            +label({
              label: 'Даты пребывания в отеле',
              _for: 'date-dropdown'
            })
          .search-room-filter__date-dropdown
            +dropdown({
              id: 'date-dropdown',
              value: '19 авг. - 23 авг.'
            })
        .search-room-filter__guests-dropdown-group
          .search-room-filter__sidebar-label
            +label({
              label: 'Гости',
              _for: 'guests-dropdown'
            })
          .search-room-filter__guests-dropdown
            +dropdown({
              id: 'guests-dropdown',
              value: '3 гостя, 1 младенец',
              rows: [
                {count: 2, text: 'взрослые', name: 'adult'},
                {count: 0, text: 'дети', name: 'kids'},
                {count: 1, text: 'младенцы', name: 'baby'}
              ]
            })
        .search-room-filter__price-slider-group
          +range-slider({
            label: 'Диапазон цены',
            name: 'price-slider',
            min: 0,
            max: 16000,
            from: 5000,
            to: 10000,
          })
          p.search-room-filter__price-slider-hint
            = 'Стоимость за сутки пребывания в номере'
        .search-room-filter__checkbox-group
            +checkbox-list({
              label: 'checkbox buttons',
              items: [
                {
                  id: 'smoke-allowed',
                  label: 'Можно курить'
                },
                {
                  id: 'pets-allowed',
                  label: 'Можно с питомцами',
                  isChecked: true
                },
                {
                  id: 'guests-allowed',
                  label: 'Можно пригласить гостей (до 10 человек)',
                  isChecked: true
                }
              ]
            })
        .search-room-filter__rich-checkbox-group
          +checkbox-list({
            label: 'Доступность',
            items: [
              {
                id: 'wide-hall-checkbox',
                label: 'Широкий коридор',
                hint: 'Ширина коридоров в номере не&nbsp;менее 91 см.'
              },
              {
                id: 'disable-assistant-checkbox',
                label: 'Помощник для инвалидов',
                hint: 'На 1 этаже вас встретит специалист и проводит до номера.'
              }
            ]
          })
        .search-room-filter__feature-dropdown-group
          .search-room-filter__sidebar-label
            +label({
              label: 'Удобства номера',
              _for: 'feature-dropdown'
            })
          .search-room-filter__feature-dropdown
            +dropdown({
              id: 'feature-dropdown',
              value: '2 спальни, 2 кровати...',
              rows: [
                {count: 2, text: 'спальни', name: 'bedroom'},
                {count: 2, text: 'кровати', name: 'bed'},
                {count: 0, text: 'ванные комнаты', name: 'bathroom'}
              ]
            })
        .search-room-filter__additional-checkbox-list-xp-group
          +checkbox-list-xp({
            id: 'additional',
            label: 'Дополнительные удобства',
            items: [
              {name: 'breakfast', label: 'Завтрак'},
              {name: 'table', label: 'Письменный стол', isChecked: true},
              {name: 'baby-chair-for-eat', label: 'Стул для кормления', isChecked: true},
              {name: 'baby-bed', label: 'Кроватка', isChecked: true},
              {name: 'tv_1', label: 'Телевизор'},
              {name: 'shampoo_1', label: 'Шампунь'},
              {name: 'tv_2', label: 'Телевизор'},
              {name: 'shampoo_2', label: 'Шампунь'}
