mixin checkbox(options)
  - const { id, name, label, theme, hint, isChecked } = options || {};
  - const createBemClasses = require('../../utils/helpers').createBemClasses;

  div(class=createBemClasses({ blockName: 'checkbox', modifiers: [{ theme }] }))
    input.checkbox__input(id=id name=(name || id) type='checkbox' checked=isChecked)
    label.checkbox__label(for=id)= label
    if hint
      p.checkbox__hint!= hint
