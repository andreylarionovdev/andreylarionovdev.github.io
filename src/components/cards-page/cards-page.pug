include ../logo/logo
include ../room-book/room-book
include ../datepicker/datepicker
include ../room-search/room-search
include ../room-thumbnail/room-thumbnail
include ../sign-in/sign-in
include ../sign-up/sign-up
  
mixin cards-page
  .cards-page
    nav.cards-page__nav
      +logo
    .cards-page__main
      .cards-page__grid-column
        article.cards-page__card
          +room-search()
        article.cards-page__card
          +sign-up()
      .cards-page__grid-column
        article.cards-page__card
          +room-book
        article.cards-page__card
          +sign-in()
      .cards-page__grid-column
        article.cards-page__card
          +datepicker({ theme: 'inline' })
        article.cards-page__card.cards-page__card_type_room-thumbnail
          +room-thumbnail({
            roomNumber: 888,
            pricePerDay: 9990,
            feedbackCounter: 145,
            rate: 5,
            images: [
              {src: './img/room-thumb-card-1.png', alt: 'Room 888'},
              {src: './img/room-thumb-card-1.png', alt: 'Room 888'},
              {src: './img/room-thumb-card-1.png', alt: 'Room 888'},
              {src: './img/room-thumb-card-1.png', alt: 'Room 888'},
            ],
            feature: 'люкс',
            hover: true
          })
        article.cards-page__card.cards-page__card_type_room-thumbnail
          +room-thumbnail({
            roomNumber: 840,
            pricePerDay: 9900,
            feedbackCounter: 65,
            rate: 4,
            images: [
              {src: './img/room-thumb-card-2.png', alt: 'Room 840'},
              {src: './img/room-thumb-card-2.png', alt: 'Room 840'},
              {src: './img/room-thumb-card-2.png', alt: 'Room 840'},
              {src: './img/room-thumb-card-2.png', alt: 'Room 840'},
            ]
          })