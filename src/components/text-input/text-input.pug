mixin text-input(options)
  -
    const {
      id,
      type = 'text',
      placeholder,
      value,
      withButton,
      isHovered,
    } = options || {};

  - const blockModifiers = isHovered ? ['hovered'] : [];

  - const createBemClasses = require('../../utils/helpers').createBemClasses

  span(class=createBemClasses({ blockName: 'text-input', modifiers: blockModifiers }))
    input.text-input__input(id=id name=(name || id) type=type placeholder=placeholder value=value)
    if withButton
      button.text-input__submit-button(type='submit')
        span.text-input__arrow.material-icons= 'arrow_forward'