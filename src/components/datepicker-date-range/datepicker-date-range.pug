include ../label/label
include ../dropdown/dropdown

mixin datepicker-date-range(options)
  -
    const mask = 'ДД.ММ.ГГГГ'
    const {
      id,
      fromLabel = 'Прибытие',
      from = mask,
      toLabel = 'Выезд',
      to = mask,
    } = options || {}

    const f = require('../../utils/functions')
    const b = 'datepicker-date-range'
    const js = 'js'

  div(class=f.bem({b, js}))
    div(class=f.bem({b, e: 'dropdown-group-from', js}))
      .datepicker-date-range__label
        +label({ label: fromLabel })
      div(class=f.bem({b, e: 'dropdown', js}))
        +dropdown({id: `${id}__from-date`, value: from})
    div(class=f.bem({b, e: 'dropdown-group-to', js}))
      .datepicker-date-range__label
        +label({ label: toLabel })
      div(class=f.bem({b, e: 'dropdown', js}))
        +dropdown({id: `${id}__to-date`, value: to})