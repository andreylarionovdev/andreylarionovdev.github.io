include ../label/label
include ../dropdown/dropdown
include ../button/button
include ../datepicker/datepicker

mixin room-search(options)
  -
    const {
      header = 'Найдём номера под ваши пожелания',
      headerTag = 'h1',
      action = 'search.html',
      method = 'GET',
    } = options || {};

  form.room-search(method=method, action=action)
    header.room-search__header
      #{headerTag}.room-search__title= header
    .room-search__datepicker
      +datepicker
    .room-search__guests-dropdown
      .room-search__label
        +label({ label: 'Гости' })
      .room-search__dropdown
        +dropdown({
          name: 'field-guests',
          type: 'guests',
          placeholder: 'Сколько гостей',
          rows: [
            {count: 0, text: 'взрослые'},
            {count: 0, text: 'дети'},
            {count: 0, text: 'младенцы'},
          ],
        })
    .room-search__button
      +button({
        theme: 'with-arrow',
        caption: 'Подобрать номер',
        type: 'submit',
        size: 'fluid',
      })