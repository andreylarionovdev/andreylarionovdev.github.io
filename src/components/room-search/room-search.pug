include ../label/label
include ../dropdown/dropdown
include ../button/button
include ../datepicker-date-range/datepicker-date-range

mixin room-search()
  form.room-search
    h1.room-search__title= 'Найдём номера под ваши пожелания'
    .room-search__datepicker-date-range-group
      +datepicker-date-range({id: `${b}__check-in-out`})
    .room-search__guests-dropdown-group
      .room-search__guests-dropdown-label
        +label({ label: 'Гости' })
      .room-search__guests-dropdown
        +dropdown({
          id: 'guests',
          value: 'Сколько гостей',
          rows: [
            {count: 0, text: 'взрослые', name: 'adult'},
            {count: 0, text: 'дети', name: 'kids'},
            {count: 0, text: 'младенцы', name: 'baby'}
          ]
        })
    .room-search__submit-button-group
      +button({
        theme: 'default',
        caption: 'Подобрать номер',
        href: 'room-filter.html',
        withArrow: true,
        isFluid: true
      })